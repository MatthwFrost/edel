{
    "manifest_version": 3,
    "name": "Highspeech",
    "version": "0.1.0",
    "description": "Highlight text and have it read out loud.",
    "permissions": [
      "activeTab",
      "storage",
      "contextMenus",
      "downloads",
      "identity.email"
    ],
    "background": {
            "service_worker": "/scripts/background.js"
    },
    "icons": {
        "16": "/assets/icon30.png",
        "32": "/assets/icon30.png",
        "48": "/assets/icon60.png",
        "128": "/assets/icon90.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["/scripts/content.js"],
        "run_at": "document_start"
      }
    ],
    "action": {
        "default_popup": "index.html"
      }
  }
  