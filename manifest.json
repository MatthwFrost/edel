{
    "manifest_version": 3,
    "name": "[DEV] Edel - AI Text-to-Speech.",
    "version": "0.1",
    "description": "[Early release] Minimal extension to read aloud any Reddit posts, audio books or webpages with the best sounding speech synthesis.",
    "permissions": [
      "storage",
      "contextMenus",
      "identity"
    ],
    "oauth2": {
      "client_id": "227012789435-45kjudjoj6aou6p2a5hdedg82nt5b35r.apps.googleusercontent.com",
      "scopes": ["https://www.googleapis.com/auth/userinfo.profile", "https://www.googleapis.com/auth/userinfo.email"] 
    },
    "background": {
            "service_worker": "/scripts/background.js",
            "permissions": true,
            "type": "module"
    },
    "icons": {
        "16": "/assets/newicon.png",
        "32": "/assets/newicon.png",
        "48": "/assets/newicon.png",
        "128": "/assets/newicon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["/scripts/content.js"],
        "run_at": "document_start",
        "type": "module"
      }
    ],
    "action": {
        "default_popup": "index.html"
      }
  }
  
