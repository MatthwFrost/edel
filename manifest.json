{
    "manifest_version": 3,
    "name": "Edel - AI Text-to-Speech.",
    "version": "1",
    "description": "Minimal extension to read aloud any Reddit post, audio books or webpages with the best sounding speech synthesis.",
    "permissions": [
      "storage",
      "contextMenus",
      "identity"
    ],
    "oauth2": {
      "client_id": "227012789435-remc8dvdrrg302rg7ntdqac53u9lol77.apps.googleusercontent.com",
      "scopes": ["https://www.googleapis.com/auth/userinfo.profile", "https://www.googleapis.com/auth/userinfo.email"] 
    },
    "background": {
            "service_worker": "/scripts/background.js",
            "permissions": true
    },
    "icons": {
        "16": "/assets/newicon.png",
        "32": "/assets/newicon.png",
        "48": "/assets/newicon.png",
        "128": "/assets/newicon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["/scripts/content.js"],
        "run_at": "document_start"
      }
    ],
    "action": {
        "default_popup": "index.html"
      }
  }
  